@model ThamQuanTDMU.Models.MENU_CONTENT

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>THÊM MỚI BÀI ĐĂNG</h2>

@using (Html.BeginForm("ThemMoi", "QuanLyBaiDang", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thông tin bài đăng</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Title, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Title)
                @Html.ValidationMessageFor(model => model.MC_Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Images, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Images)
                @Html.ValidationMessageFor(model => model.MC_Images)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Position, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Position)
                @Html.ValidationMessageFor(model => model.MC_Position)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Description, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Description)
                @Html.ValidationMessageFor(model => model.MC_Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Sources, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Sources)
                @Html.ValidationMessageFor(model => model.MC_Sources)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.MC_Note, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Note)
                @Html.ValidationMessageFor(model => model.MC_Note)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Paths, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MC_Paths)
                @Html.ValidationMessageFor(model => model.MC_Paths)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Menu_Id, "Mã menu", new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.TextBoxFor(model => model.Menu_Id, new { @Value = "1",  @readonly="true"})
                @Html.ValidationMessageFor(model => model.Menu_Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Department_Id, "Mã mục", new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Department_Id, new { @Value = "1",  @readonly="true"})
                @Html.ValidationMessageFor(model => model.Department_Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MC_Content, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
                <br />
                <textarea name="MC_Content">Nhập nội dung bài đăng...</textarea>
                @Html.ValidationMessageFor(model => model.MC_Content)
                <br />
                <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btnSubmit" type="submit" value="Lưu" style=" margin-top: 1%; margin-left: 25%; width: 100px; height: 50px;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
