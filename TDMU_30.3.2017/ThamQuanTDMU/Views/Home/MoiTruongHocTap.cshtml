
@{
    ViewBag.Title = "Môi trường học tập";

}
@model List<ThamQuanTDMU.Models.STUDY_ENVIRONMENT>
 <!--PHÒNG HỌC-->
<div class="container mtb">
    <div class="row">
        <div class="col-lg-4">
            <h3>PHÒNG HỌC</h3>
            <p>Một không gian rộng rãi, thoáng đãng cùng với trang thiết bị hiện đại góp phần tạo nên một môi trường lý tưởng nhất cho giảng viên, sinh viên trong công tác dạy và học </p>
            <hr style="width: 50%">
            <div style="background-color:#f0c282;padding: 10px">
                <h4>Một số hình ảnh</h4>
            </div>
            <hr style="width: 50%">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    if (item.SE_Type == 1)       //chạy vòng lặp load dữ liệu
                    {
                        <div id="@item.SE_Id" class="col-lg-6 ph">
                            <img class="img-responsive" src="~/Content/assets/img/tdmu_img/@item.SE_Image" alt="">
                        </div>
                      <script>                          //chỉnh js chọn ảnh
                        $(document).ready(function () {
                            $('#@item.SE_Id').click(function () {
                                $('#ph').attr("src", "../Content/assets/img/tdmu_img/@item.SE_Image");
                            });
                        }); 
                    </script>
                    }
                }
            </div>
        </div>
        @foreach (var item in Model)
        {
            if (item.SE_Note=="PhongHoc")
            {
                 <div class="col-lg-8 piczoom">
                     <img id="ph" src="~/Content/assets/img/tdmu_img/@item.SE_Image" style="width: 100%;height: 550px;"
                          class="img-responsive phone-image" alt="">
                </div>
            }
             
        }
        
    </div>

</div>
<!--END PHÒNG HỌC-->

