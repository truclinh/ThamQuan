
@{
    ViewBag.Title = "Hoạt động nghiên cứu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ThamQuanTDMU.Models.STUDY_ACTIVITY>

@foreach (var item in Model)
{
    if (item.SA_Video == null)
    {
        <!--TITLE-->
        <br>
        <div class="container mtb">
            <div class="row">
                <div class="col-lg-8">
                    <center>
                        <img id="th" src="~/Content/assets/NCKH/img/@item.SA_Image" style="width:100%;height: 550px;"
                             class="img-responsive phone-image">
                    </center>
                </div>

                <div class="col-lg-4">
                    <h4 style="background-color:#f0c282;padding: 10px">@item.SA_Title</h4>
                    <hr style="width: 50%">
                    <p><b>Khoa:</b>@item.SA_Khoa</p>
                    <p><b>Năm thực hiện:</b>@item.SA_Year</p>
                    <p><b>Mục tiêu:</b>@Html.Raw(@item.SA_Content)</p>
                    <hr style="width: 50%">
                </div>
            </div><! --/row -->
        </div><! --/container -->
        <!--END TITLE-->
    }
     if (item.SA_Video != null)
    {
        <!--TITLE-->
        <div class="container mtb">
            <div class="row">
                <div class="col-lg-4">
                    <center>
                        <img src="~/Content/assets/NCKH/img/@item.SA_Image" style="width:100%;height: 550px;"
                             class="img-responsive phone-image">
                    </center>
                </div>
                <div class="col-lg-4">
                    <h4 style="background-color:#f0c282;padding: 10px">@item.SA_Title</h4>
                    <hr style="width: 50%">
                    <p><b>Khoa:</b>@item.SA_Khoa</p>
                    <p><b>Năm thực hiện:</b>@item.SA_Year</p>
                    <p><b>Mục tiêu:</b>@Html.Raw(@item.SA_Content)</p>
                </div>
                <div class="col-lg-4">
                    <video style="width: 100%;height:550px;" controls loop="loop" muted="muted">
                        <source src="~/Content/assets/NCKH/video/@item.SA_Video" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
        <!--END TITLE-->
    }
}
 

